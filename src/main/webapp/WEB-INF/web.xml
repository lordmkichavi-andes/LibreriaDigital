<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>clienteServlet</servlet-name>
        <servlet-class>org.example.servlet.ClienteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>clienteServlet</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productoServlet</servlet-name>
        <servlet-class>org.example.servlet.ProductoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productoServlet</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ventaServlet</servlet-name>
        <servlet-class>org.example.servlet.VentaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ventaServlet</servlet-name>
        <url-pattern>/ventas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>categoriaServlet</servlet-name>
        <servlet-class>org.example.servlet.CategoriaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>categoriaServlet</servlet-name>
        <url-pattern>/categorias</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>descuentoServlet</servlet-name>
        <servlet-class>org.example.servlet.DescuentoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>descuentoServlet</servlet-name>
        <url-pattern>/descuentos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reporteServlet</servlet-name>
        <servlet-class>org.example.servlet.ReporteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>reporteServlet</servlet-name>
        <url-pattern>/reportes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AcercaDeServlet</servlet-name>
        <servlet-class>org.example.servlet.AcercaDeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AcercaDeServlet</servlet-name>
        <url-pattern>/acerca-de</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
